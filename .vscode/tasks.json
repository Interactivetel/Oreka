{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OrkBase",
            "type": "shell",
            "command": "make -j",
            "options": {
                "cwd": "${workspaceFolder}/orkbasecxx"
            },
            "problemMatcher": "$gcc",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build OrkAudio",
            "type": "shell",
            "command": "make -j",
            "dependsOn": ["Build OrkBase"],
            "options": {
                "cwd": "${workspaceFolder}/orkaudio"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
